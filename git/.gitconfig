[alias]
    amend     = commit --amend
    last      = log --stat --abbrev-commit -1
    ll        = log --stat --abbrev-commit
    revise    = !git add -A && git amend -C HEAD && git push -f
    st        = status
    sync      = !git pull && git push
    tags      = !git tag | sort -t. -k 1,1n -k 2,2n -k 3,3n -k 4,4n
    up        = !git stash --include-untracked && git pull && git stash pop
    who       = shortlog --numbered --summary --email --no-merges
    word-diff = diff --color-words=.
[branch]
    autosetuprebase = always
[color]
    branch = auto
    diff = auto
    grep = auto
    status = auto
    ui = auto
    interactive = auto
[color "grep"]
    filename = magenta
    match    = red bold
    linenumber = green
    separator  = cyan
[core]
    ignorecase = false
    trustctime = false
    pager = less -r
[credential]
    helper =
    helper = /usr/local/share/gcm-core/git-credential-manager-core
[credential "https://dev.azure.com"]
    useHttpPath = true
 [commit]
    gpgsign = true
[diff "sops"]
    textconv = "sops -d"
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[init]
    # can't be a symlink
    templateDir = ~/.dotfiles/git-template
    defaultBranch = trunk
[merge]
    log = true
    summary = true
[pager]
    branch = false
[push]
    default = simple
[remote "origin"]
    push = HEAD
    # fetch = +refs/heads/*:refs/remotes/origin/*
