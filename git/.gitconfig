[core]
    ignorecase = false
    trustctime = false
    pager = less -r
    excludesfile = ~/.gitignore-global
[init]
    templateDir = ~/.config/git/template/
[alias]
    # common typos
    staus      = status
    stats      = status
    stauts     = status
    st         = status

    # my aliases
    amend      = commit --amend
    last       = log --stat --abbrev-commit -1
    ll         = log --stat --abbrev-commit
    sync       = !git pull && git push
    tags       = !git tag | sort -t. -k 1,1n -k 2,2n -k 3,3n -k 4,4n 
    update     = !git stash -u && git pull && git stash pop
    who        = shortlog --numbered --summary --email --no-merges
[color]
    branch = auto
    diff = auto
    grep = auto                                                                 
    status = auto
    ui = auto
    interactive = auto
[color "grep"]                                                                  
    filename = magenta                                                          
    match    = red bold                                                         
    linenumber = green                                                          
    separator  = cyan
[branch]
    autosetuprebase = always
[merge]                                                                         
    log = true                                                                  
    summary = true
[push]
    default = simple
[remote "origin"]
    push = HEAD
    # fetch = +refs/heads/*:refs/remotes/origin/*
